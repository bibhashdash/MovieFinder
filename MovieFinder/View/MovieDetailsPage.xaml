<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieFinder.View.MovieDetailsPage"
             xmlns:viewModel="clr-namespace:MovieFinder.ViewModel"
             x:DataType="viewModel:MovieDetailsViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             >
    <VerticalStackLayout>
        <Label Text="{Binding MovieDetails.Title}" />
        <Label Text="{Binding MovieDetails.Plot}" />
    </VerticalStackLayout>
  

</ContentPage>